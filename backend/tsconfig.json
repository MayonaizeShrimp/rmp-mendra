{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "paths": {
      "shared/*": ["../shared/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "include": [
    "src",
    "../shared"
  ],
  "exclude": ["node_modules"]
}
